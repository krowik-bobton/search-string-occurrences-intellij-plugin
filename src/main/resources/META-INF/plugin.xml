<idea-plugin>
    <id>com.github.krowikbobton.searchstringoccurrencesintellijplugin</id>
    <name>Search-String-Occurrences</name>
    <vendor>krowik-bobton</vendor>
    <description><![CDATA[
       This plugin allows user to quickly search for text occurrences in any given directory.
    ]]></description>
    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow
                factoryClass="com.github.krowikbobton.searchstringoccurrencesintellijplugin.toolWindow.SearchingToolWindow"
                id="StringSearcher"
        />
    </extensions>
</idea-plugin>
